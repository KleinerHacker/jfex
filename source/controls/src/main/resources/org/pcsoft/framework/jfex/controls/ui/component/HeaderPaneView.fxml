<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="CENTER_LEFT" style="-fx-background-color: -fx-color;" type="HBox" xmlns="http://javafx.com/javafx/8.0.72"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.pcsoft.framework.jfex.controls.ui.component.HeaderPaneView">
    <ImageView fx:id="imgImage" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
        <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
    </ImageView>
    <VBox maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </HBox.margin>
        <Label fx:id="lblTitle" style="-fx-font-size: 18pt; -fx-font-weight: bold;" text="Header Title">
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </Label>
        <Label fx:id="lblDescription" text="Header Description" wrapText="true">
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
        </Label>
    </VBox>
    <HBox>
        <Button fx:id="btnHelp" mnemonicParsing="false" style="-fx-background-color: transparent;">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <graphic>
                <ImageView fitHeight="16" fitWidth="16">
                    <Image url="@/icons/ic_help.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</fx:root>
