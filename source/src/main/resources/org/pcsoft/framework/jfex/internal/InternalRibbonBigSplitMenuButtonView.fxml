<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.shape.SVGPath?>
<fx:root fx:id="pnlRoot" alignment="TOP_CENTER" styleClass="ribbon-button,ribbon-split-menu-button" type="VBox" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.pcsoft.framework.jfex.ribbon.component.internal.InternalRibbonBigSplitMenuButtonView">
   <children>
      <VBox styleClass="ribbon-split-button" alignment="TOP_CENTER">
         <children>
            <ImageView fx:id="imgIcon" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#onActionMouseClick"/>
         </children>
      </VBox>
      <VBox styleClass="ribbon-split-menu" onMouseClicked="#onMenuMouseClick" alignment="TOP_CENTER">
         <children>
            <Label fx:id="lblTitle" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Label" />
            <SVGPath content="M0,0 H6 L3,6 Z" style="${lblTitle.style}"/>
         </children>
      </VBox>
   </children>
</fx:root>
